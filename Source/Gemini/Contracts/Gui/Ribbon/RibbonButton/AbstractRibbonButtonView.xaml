<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
										xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Gemini.Contracts.Gui.Ribbon.RibbonButton.AbstractRibbonButtonView"
										xmlns:f="clr-namespace:Fluent;assembly=Fluent"
	xmlns:RibbonButton="clr-namespace:Gemini.Contracts.Gui.Ribbon.RibbonButton">
	<DataTemplate DataType="{x:Type RibbonButton:AbstractRibbonButton}">
		<DataTemplate.Resources>
			<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
		</DataTemplate.Resources>
		<f:Button Text="{Binding Text}" Command="{Binding Command}" Icon="{Binding Icon}" LargeIcon="{Binding LargeIcon}"
							Visibility="{Binding Visible, Converter={StaticResource BooleanToVisibilityConverter}}"
							ToolTip="{Binding ToolTip}"
							SizeDefinition="{Binding SizeDefinition}" />
	</DataTemplate>
</ResourceDictionary>