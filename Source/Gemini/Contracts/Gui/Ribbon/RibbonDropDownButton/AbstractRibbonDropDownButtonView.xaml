<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
										xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Gemini.Contracts.Gui.Ribbon.RibbonDropDownButton.AbstractRibbonDropDownButtonView"
										xmlns:f="clr-namespace:Fluent;assembly=Fluent"
	xmlns:RibbonDropDownButton="clr-namespace:Gemini.Contracts.Gui.Ribbon.RibbonDropDownButton">
	<DataTemplate DataType="{x:Type RibbonDropDownButton:AbstractRibbonDropDownButton}">
		<DataTemplate.Resources>
			<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
		</DataTemplate.Resources>
		<f:DropDownButton Text="{Binding Text}" Command="{Binding Command}" Icon="{Binding Icon}" LargeIcon="{Binding LargeIcon}"
											Visibility="{Binding Visible, Converter={StaticResource BooleanToVisibilityConverter}}"
											ToolTip="{Binding ToolTip}" SizeDefinition="{Binding SizeDefinition}"
											Loaded="DropDownButton_Loaded" />
	</DataTemplate>
</ResourceDictionary>