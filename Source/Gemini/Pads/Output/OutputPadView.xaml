<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
										xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Output="clr-namespace:Gemini.Pads.Output"
	x:Class="Gemini.Pads.Output.OutputPadView">
	<DataTemplate DataType="{x:Type Output:OutputPad}">
		<TextBox x:Name="OutputTextBox" Text="{Binding Text, Mode=OneWay}" ScrollViewer.VerticalScrollBarVisibility="Auto"
						 IsReadOnly="True" IsReadOnlyCaretVisible="True" Loaded="OutputTextBox_Loaded" />
	</DataTemplate>
</ResourceDictionary>